<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="weave.NewsItemTile"
	d:DesignWidth="408" d:DesignHeight="113">

	<Grid x:Name="LayoutRoot" Background="Transparent">
		<Button Click="OnClick" Style="{StaticResource NakedButtonStyle}">
			<Grid>
				<Rectangle Fill="Black" />
				<TextBlock x:Name="headlineTxt" TextWrapping="Wrap" Text="Sharp keeps going..." FontFamily="{StaticResource PhoneFontFamilySemiLight}" FontSize="24" Margin="8,8,8,10" VerticalAlignment="Center" MaxHeight="95" Foreground="{StaticResource WhiteForegroundBrush}"/>
			</Grid>
		</Button>
	</Grid>
</UserControl>