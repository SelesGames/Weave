<nag:NagScreen
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nag="clr-namespace:SelesGames.Nag;assembly=SelesGames.Nag" 
	x:Class="weave.NagScreen"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Width="440" Height="760">
    
    <Grid x:Name="LayoutRoot">
		<TextBlock TextWrapping="Wrap" FontSize="{StaticResource PhoneFontSizeMediumLarge}" ><Run Text="This feature is only available with the paid version of weave.  "/><LineBreak/><Run/><LineBreak/><Run Text="Please click the Marketplace button below to buy now!"/></TextBlock>
    </Grid>
</nag:NagScreen>
