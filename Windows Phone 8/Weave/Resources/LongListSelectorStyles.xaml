    <Style x:Key="LongListSelectorStyle" TargetType="phone:LongListSelector">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="phone:LongListSelector">
                    <Grid Background="{TemplateBinding Background}" d:DesignWidth="480" d:DesignHeight="800">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ScrollStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="00:00:00.5"/>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Scrolling">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="VerticalScrollBar"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="NotScrolling"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <ViewportControl x:Name="ViewportControl" HorizontalContentAlignment="Stretch" VerticalAlignment="Top"/>
                            <ScrollBar x:Name="VerticalScrollBar" Grid.Column="1" Margin="4,0,4,0" Opacity="0" Orientation="Vertical"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <ControlTemplate x:Key="PhoneScrollbarThumb" TargetType="Thumb">
    	<Rectangle Fill="{TemplateBinding Background}" Height="{TemplateBinding Height}" IsHitTestVisible="False" Width="{TemplateBinding Width}"/>
    </ControlTemplate>

	<Style x:Key="InternallyPaddedScrollBarStyle" TargetType="ScrollBar">
		<Setter Property="Background" Value="{StaticResource PhoneDisabledBrush}"/>
		<Setter Property="Padding" Value="1"/>
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="MinWidth" Value="5"/>
		<Setter Property="MinHeight" Value="5"/>
		<Setter Property="IsHitTestVisible" Value="False"/>
		<Setter Property="Template">
    		<Setter.Value>
    			<ControlTemplate TargetType="ScrollBar">
    				<Grid>
    					<Grid x:Name="VerticalRoot" Margin="{TemplateBinding Padding}" Background="Transparent" Width="{TemplateBinding Width}">
    						<Thumb x:Name="VerticalThumb" Background="{TemplateBinding Background}" Margin="1" MinHeight="72" Template="{StaticResource PhoneScrollbarThumb}" Width="{TemplateBinding Width}"/>
    					</Grid>
    					<Grid x:Name="HorizontalRoot" Margin="{TemplateBinding Padding}" Background="Transparent" Height="{TemplateBinding Height}">
    						<Thumb x:Name="HorizontalThumb" Background="{TemplateBinding Background}" Margin="1" MinWidth="72" Template="{StaticResource PhoneScrollbarThumb}" Height="{TemplateBinding Height}"/>
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="InternallyPaddedLongListSelectorStyle" TargetType="phone:LongListSelector">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="phone:LongListSelector">
					<Grid Background="{TemplateBinding Background}" d:DesignWidth="480" d:DesignHeight="800">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="ScrollStates">
								<VisualStateGroup.Transitions>
									<VisualTransition GeneratedDuration="00:00:00.5"/>
								</VisualStateGroup.Transitions>
								<VisualState x:Name="Scrolling">
									<Storyboard>
										<DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="VerticalScrollBar"/>
									</Storyboard>
								</VisualState>
								<VisualState x:Name="NotScrolling"/>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="auto"/>
							</Grid.ColumnDefinitions>
							<ViewportControl x:Name="ViewportControl" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Top" Padding="{TemplateBinding Padding}" />
							<ScrollBar x:Name="VerticalScrollBar" Grid.Column="1" Margin="4,0,4,0" Opacity="0" Orientation="Vertical" Padding="{TemplateBinding Padding}" Style="{StaticResource InternallyPaddedScrollBarStyle}"/>
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>