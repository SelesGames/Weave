<UserControl x:Class="Weave.LiveTile.ScheduledAgent.LiveTileBack"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	FontFamily="{StaticResource PhoneFontFamilyNormal}"
	FontSize="{StaticResource PhoneFontSizeNormal}"
	Foreground="White"
	Height="173" Width="173">
	
	<Grid x:Name="LayoutRoot" Background="{StaticResource PhoneAccentBrush}">
		<TextBlock x:Name="Headline" LineHeight="23.333" HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding Headline}" FontSize="{StaticResource PhoneFontSizeMediumLarge}" FontFamily="{StaticResource PhoneFontFamilyLight}" TextTrimming="WordEllipsis" TextWrapping="Wrap" Margin="7,8,6,4" LineStackingStrategy="BlockLineHeight" Height="119" />
		<TextBlock x:Name="NewCount" HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="{Binding NewCount}" FontSize="17.333" FontFamily="Segoe WP Black" Margin="0,4,8,4" Opacity="0.92"/>
	</Grid>
</UserControl>
